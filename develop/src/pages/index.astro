---
import Header from '../components/layouts/Header.astro';
import Footer from '../components/layouts/Footer.astro';
import SplideSlider from '../components/SplideSlider.astro';
import '../../src/css/index.scss';
const imagePath = "/assets/images/";

const slides = [
	{src: `${imagePath}img_01.jpg`,alt: "slide01"},
	{src: `${imagePath}img_02.jpg`,alt: "slide02"},
	{src: `${imagePath}img_03.jpg`,alt: "slide03"},
];
---

<html lang="ja">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href={`${imagePath}favicon.svg`} />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
		<script src="../js/index.js"></script>
	</head>
	<body>
		<Header imagePath={imagePath}/>
		<SplideSlider slides={slides}/>
		<Footer />
	</body>
</html>
