---
import '@splidejs/splide/css';
const { slides } = Astro.props;
---


<div class="splide" aria-label="Splide Basic HTML Example">
  <div class="splide__track">
    <div class="splide__list">
      {slides.map(slide => (
        <div class="splide__slide">
          <img src={slide.src} alt={slide.alt}/>
        </div>
      ))}
    </div>
  </div>
</div>

<style lang="scss">
  // @use "../../src/css/global/index.scss" as *;
  @use "../../src/css/setting/index.scss" as *;
  .splide {
    width: pc(500);
    height: pc(500);
    margin: auto;
  .splide__track {
    .splide__list {
      .splide__slide {
        width: pc(500);
        height: pc(500);
        img {
          width: 100%;
          height: 100%;
          object-fit: cover;
        }
      }
    }
  }
}
</style>
